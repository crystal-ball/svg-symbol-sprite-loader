{
  "name": "svg-symbol-sprite-loader",
  "version": "5.0.0",
  "description": "Loader and plugin for generating an SVG symbol sprite",
  "main": "src/index.js",
  "browser": "src/browser/icon-sprite-loader.js",
  "repository": {
    "type": "git",
    "url": "https://github.com/crystal-ball/svg-symbol-sprite-loader.git"
  },
  "keywords": [
    "webpack",
    "svg",
    "loader",
    "sprite"
  ],
  "contributors": [
    "Dan Hedgecock <hedgecock.d@gmail.com> (https://danhedgecock.com)"
  ],
  "license": "ISC",
  "scripts": {
    "container": "docker-compose run --service-ports --rm test-app",
    "test": "npm run test:lint && npm run test:unit",
    "test:lint": "NODE_ENV=test eslint src",
    "test:unit": "jest",
    "format": "prettier --write '*.{js,json,md}' '**/*.{js,json,md,mdx,scss}' !CHANGELOG.md"
  },
  "peerDependencies": {
    "loader-utils": "2",
    "webpack": "4"
  },
  "dependencies": {
    "parse5": "6",
    "safe-require": "1",
    "webpack-sources": "1"
  },
  "devDependencies": {
    "@crystal-ball/commitizen-base": "2.7.1",
    "@crystal-ball/prettier-base": "2.2.0",
    "@crystal-ball/semantic-release-base": "2.18.1",
    "babel-preset-env": "1.7.0",
    "eslint-config-eloquence": "13.8.0",
    "husky": "4.2.5",
    "jest": "26.0.1",
    "loader-utils": "2.0.0",
    "memory-fs": "0.5.0",
    "webpack": "4.43.0"
  },
  "prettier": "@crystal-ball/prettier-base",
  "config": {
    "commitizen": {
      "path": "@crystal-ball/commitizen-base"
    }
  },
  "husky": {
    "hooks": {
      "prepare-commit-msg": "exec < /dev/tty && git cz --hook || true"
    }
  },
  "release": {
    "extends": [
      "@crystal-ball/semantic-release-base"
    ]
  },
  "renovate": {
    "extends": [
      "github>crystal-ball/renovate-base:library"
    ]
  }
}
